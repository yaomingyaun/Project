<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".homeshow.ShowActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/show_viewpage"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/show_radio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@mipmap/bg_homepage_bottom"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/show_home"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
           android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/but1"
           />
        <RadioButton
            android:id="@+id/show_circle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_20"
            android:button="@null"

          android:background="@drawable/but2"
            />
        <RadioButton
            android:id="@+id/shoping_car"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_80"
            android:layout_weight="1"
            android:button="@null"

            android:layout_marginTop="@dimen/dp_20"
            android:background="@mipmap/tab_home_bottom_gouwuche"
          />
        <RadioButton
            android:id="@+id/show_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1"
          android:button="@null"
           android:background="@drawable/but3"
            />
        <RadioButton
            android:id="@+id/show_my"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:layout_weight="1"
            android:button="@null"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/but4"
          />

    </RadioGroup>

</LinearLayout>