<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_10"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/home_pop"
               android:layout_width="@dimen/dp_40"
               android:layout_height="@dimen/dp_40"
               android:background="@mipmap/common_btn_menu"/>
           <ImageView
               android:id="@+id/home_back"
               android:layout_width="@dimen/dp_40"
               android:layout_height="@dimen/dp_40"
               android:visibility="gone"
               android:background="@mipmap/common_nav_btn_back_n_hdpi"/>
           <EditText
               android:id="@+id/home_search"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_50"
               android:layout_weight="1"
               android:layout_marginLeft="@dimen/dp_5"
               android:visibility="invisible"
               android:background="@drawable/home_serach"
               android:hint="   请输入搜索的内容"/>
           <ImageView
               android:id="@+id/home_sousuo"
               android:layout_width="@dimen/dp_50"
               android:layout_height="@dimen/dp_50"
               android:layout_marginLeft="@dimen/dp_5"
               android:background="@mipmap/common_nav_btn_search"/>
           <Button
               android:id="@+id/home_but1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:visibility="gone"
               android:text="搜索"/>
       </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/top_RecyclerView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/bootom_RecyclerView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/serach_XRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/xbanner"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:clipChildren="false"
            app:isClipChildrenMode="true"
            android:layout_height="@dimen/dp_200"/>

        <RelativeLayout
            android:id="@+id/home_rxxp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sell"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/bg_rxxp_syf"
                android:text="热销商品"
                android:textColor="#FFC0CB"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/rxsp_more"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignRight="@id/sell"
                android:src="@mipmap/home_btn_moer_pink_n_hdpi"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/RXSP_RecyclerView"
                android:layout_below="@id/sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_mlss"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fa"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/bg_mlss_syf"
                android:text="魔丽时尚"
                android:textColor="#F08080"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/mlss_more"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/common_btn_more_yellow_n_hdpi"
                android:layout_alignRight="@id/fa"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/MLSS_RecyclerView"
                android:layout_below="@+id/fa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_pzsh"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/live"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="@mipmap/bg_pzsh_syf"
                android:text="品质生活"
                android:textColor="#FF4500"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/pzsh_more"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/home_btn_moer_pink_n_hdpi"
                android:layout_alignRight="@id/live"/>

            <android.support.v7.widget.RecyclerView

                android:id="@+id/PZSH_RecyclerView"
                android:layout_below="@id/live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>